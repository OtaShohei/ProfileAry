<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jp.egaono.ota150.profile.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/prfPh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3"
                android:src="@drawable/suz" />

            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:text="鈴木浩幸 先生" >
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/prfTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="プログラミングの講師をしております。プログラミングはセンスと努力。そして第一に好きになること。「好きこそ物の上手なれ」しっかりと基礎から学習してプログラミングを好きになっていきましょう。"
            android:textSize="15sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="16"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" >

            <!-- 「名前を押してね」ではボタンと異なり親要素layoutに対するテキストの位置指定なので、textViewの位置を指定するlayout_gravityを用いる。 -->

            <TextView
                android:id="@+id/textView3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:text="名前を押してね"
                android:textSize="18sp" >
            </TextView>

            <!-- ボタンでは、ボタンに対するテキストの位置を指定するgravityを用いる。 -->

            <Button
                android:id="@+id/suz"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="2"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onSuzClick"
                android:text="鈴木先生" />

            <Button
                android:id="@+id/iwa"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onIwaClick"
                android:text="岩永" />

            <Button
                android:id="@+id/uti"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onUtiClick"
                android:text="内田" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/ois"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onOisClick"
                android:text="大石" />

            <Button
                android:id="@+id/ota"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onOtaClick"
                android:text="太田" />

            <Button
                android:id="@+id/sak"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onSakClick"
                android:text="川崎" />

            <Button
                android:id="@+id/sim"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onSimClick"
                android:text="川島" />

            <Button
                android:id="@+id/kur"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onKurClick"
                android:text="栗原" />

            <Button
                android:id="@+id/tki"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onTkiClick"
                android:text="高井" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/tkh"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onTkhClick"
                android:text="高橋" />

            <Button
                android:id="@+id/tuk"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onTukClick"
                android:text="塚原" />

            <Button
                android:id="@+id/nak"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onNakClick"
                android:text="仲" />

            <Button
                android:id="@+id/nakm"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onNakmClick"
                android:text="中村" />

            <Button
                android:id="@+id/has"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onHasClick"
                android:text="長谷川" />

            <Button
                android:id="@+id/hri"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onHriClick"
                android:text="堀井" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/rqstBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/funkbtn"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onRqstClick"
                android:text="修正依頼" />

            <Button
                android:id="@+id/mur"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onMurClick"
                android:text="村野" />

            <Button
                android:id="@+id/yam"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_customize"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onYamClick"
                android:text="山本" />

            <Button
                android:id="@+id/serchBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/funkbtn"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="onSerchClick"
                android:text="更に詳しく" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>